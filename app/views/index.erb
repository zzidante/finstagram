    <header>
            <h1 id="pageTitle"> Finstagram The Great!</h1>
            
            <div class = "login-info">
                <% if current_user %>
                    <span id = "loginUsernameTitle"><%=current_user.username.upcase%></span>
                    <a href= "/logout">Logout</a>
                    <% else %>
                    <a href="/login">Login</a>
                    <a href="/signup">Signup</a>
                <% end %>
            </div>
        </header>
        
        <!-- ...CONTENT AREA... -->
        <main role="main"> 
        
    <% @posts.each do |post| %>
         <article class="post">
             <div class="user-info">
                 <img src= "<%= post.user.avatar_url %>" alt="<%= post.user.username %>">
                 <h2><%= post.user.username %></h2>
                 <h3><%= post.humanized_time_ago %></h3>
             </div>
             <a class="photo" href="#">
                 <img src="<%= post.photo_url %>" alt="post from <%= post.user.username %>">
             </a>
             <div class="actions">
                <%= post.like_counts %> likes 
                 <span class="comments-count"> . <%=post.comment_count %> comments</span>
             </div>
             <ul class="comments">
                 <!--Ruby code for populating more comments -->
                 <% post.comments.each do |comment| %>
                 <li>
                     <p>
                         <%= comment.user.username %>: <%= comment.text %>
                     </p>
                 </li>
                 <% end %>
             </ul>
         </article>   
        <% end %>
        
<h4> To know more about Finstagram The Great's creator, visit her @ <a href="http://www.melodydanteandthemobverse.weebly.com" alt="MD Blog link">Melody Dante and the Mobverse</a>. </h4>
            
        </main>
        
        
        
        
        
        
        
      